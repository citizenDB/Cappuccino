{
  "manifest_version": 3,
  "name": "Cappuccino",
  "version": "1.1.0",
  "author": "citizenDB",
  "homepage_url": "https://github.com/citizenDB/Cappuccino/",
  "description": "Save articles, videos, and images you'll actually revisit - crafted with care, like your morning cappuccino.",
  "default_locale": "en",
  "permissions": [
    "contextMenus",
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "img/icon16.png",
      "32": "img/icon32.png",
      "48": "img/icon48.png",
      "128": "img/icon128.png"
    }
  },
  "icons": {
      "16": "img/icon16.png",
      "32": "img/icon32.png",
      "48": "img/icon48.png",
      "128": "img/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }  
  ]
}